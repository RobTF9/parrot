{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "types": ["node"],
    "paths": { "*": ["../types/*.d.ts"] }
  },
  "include": ["client", "server", "types"]
}
